<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/txtJasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Biaya Jasa" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtOli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtJasa"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Biaya Ganti Oli" />

    <EditText
        android:id="@+id/txtSparepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtOli"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtOli"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Biaya Sparepart" />

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSparepart"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtSparepart"
        android:layout_marginTop="19dp"
        android:text="Hitung Diskon" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnHitung"
        android:layout_below="@+id/btnHitung"
        android:layout_marginTop="14dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
