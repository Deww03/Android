<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:minWidth="300dp"
        android:textSize="35sp" />

    <Button
        android:id="@+id/buttondelapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonsembilan"
        android:layout_alignBottom="@+id/buttonsembilan"
        android:layout_toRightOf="@+id/buttontujuh"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="8" />

    <Button
        android:id="@+id/buttonsembilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonbagi"
        android:layout_alignBottom="@+id/buttonbagi"
        android:layout_toLeftOf="@+id/buttonbagi"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="9" />

    <Button
        android:id="@+id/buttontambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="+" />

    <Button
        android:id="@+id/buttonkurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttontambah"
        android:layout_alignParentRight="true"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="-" />

    <Button
        android:id="@+id/buttonkali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonkurang"
        android:layout_alignParentRight="true"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="x" />

    <Button
        android:id="@+id/buttonbagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonkali"
        android:layout_alignParentRight="true"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="/" />

    <Button
        android:id="@+id/buttontujuh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttondelapan"
        android:layout_alignBottom="@+id/buttondelapan"
        android:layout_alignParentLeft="true"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="7" />

    <Button
        android:id="@+id/buttondelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonbagi"
        android:layout_alignParentRight="true"
        android:minWidth="72dp"
        android:text="Delete" />

    <Button
        android:id="@+id/buttonenam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonsembilan"
        android:layout_toLeftOf="@+id/buttonkali"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="6" />

    <Button
        android:id="@+id/buttonlima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttondelapan"
        android:layout_toLeftOf="@+id/buttonsembilan"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="5" />

    <Button
        android:id="@+id/buttonempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttondelapan"
        android:layout_toLeftOf="@+id/buttondelapan"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="4" />

    <Button
        android:id="@+id/buttontiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonkali"
        android:layout_toLeftOf="@+id/buttonkurang"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="3" />

    <Button
        android:id="@+id/buttondua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonenam"
        android:layout_toLeftOf="@+id/buttonenam"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="2" />

    <Button
        android:id="@+id/buttonsatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonlima"
        android:layout_toLeftOf="@+id/buttonlima"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="1" />

    <Button
        android:id="@+id/buttonkoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonsatu"
        android:layout_below="@+id/buttonsatu"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="," />

    <Button
        android:id="@+id/buttonnol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttondua"
        android:layout_toRightOf="@+id/buttonsatu"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="0" />

    <Button
        android:id="@+id/buttonsamadengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonkurang"
        android:layout_toLeftOf="@+id/buttontambah"
        android:minHeight="72dp"
        android:minWidth="72dp"
        android:text="=" />

</RelativeLayout>
